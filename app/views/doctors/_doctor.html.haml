%li
  %article.doctor-item{id: "doctor_#{doctor.id}"}
    %header
      %h2= doctor.name
      - if doctor.service_name
        %p= doctor.service_name
      %span.doctor-distance= distance_with_unit(doctor.distance) if @q
    .doctor-location-block
      %p= display_address(doctor.address)
      = map_link(doctor.address)
    - if doctor.phone_number
      %p= link_to t("call_phone_number", number: doctor.phone_number),
                  "tel:#{doctor.phone_number}"
